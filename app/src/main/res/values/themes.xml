<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppVariazioni" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/blue_700</item>

        <item name="colorSurfaceVariant">@color/gray_400</item>

        <item name="textFillColor">@color/black</item>

        <item name="cardBackgroundColor">@color/gray_300</item>
    </style>

    <style name="Theme.AppVariazioni.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@color/blue_500</item>
        <item name="itemTextColor">@color/white</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemActiveIndicatorStyle">@style/Theme.AppVariazioni.BottomNavigationView.ActiveIndicator</item>
        <item name="itemTextAppearanceInactive">?attr/textAppearanceTitleSmall</item>
    </style>

    <style name="Theme.AppVariazioni.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/blue_700</item>
    </style>

    <style name="Theme.AppVariazioni.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="android:background">@color/blue_500</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabIndicator">@drawable/tabs_active_shape</item>
        <item name="tabIndicatorColor">@color/blue_700</item>
        <item name="tabIndicatorFullWidth">true</item>
    </style>

    <style name="Theme.AppVariazioni.MaterialSwitch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="trackDecorationTint">@android:color/transparent</item>
        <item name="thumbTint">@color/white</item>
    </style>
</resources>